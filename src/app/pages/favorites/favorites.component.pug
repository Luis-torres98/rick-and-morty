.favorites__container 
	.container__header 
		i.fa-solid.fa-arrow-left((click)="navigate('')")
		h2 Favorites Characters

	.container__cards(*ngIf="listCharacters.length  !== 0")
		.character__card(*ngFor="let character of listCharacters") 

			img([src]="character.image", [alt]="character.name") 
			p Name : {{ character.name }}
			p Status : {{ character.status }}
			p Species : {{ character.species  }}
			p.click((click)="getIdLocation(character.location.url)") Location : {{ character.location.name }}
			p.last Last Episode : {{ getLastEp(character.episode) }}

			button.btn((click)="navigate('/character/'+ character.id)")
				p More detail
	button.btn(*ngIf="listCharacters.length  !== 0" , (click)="deleteAllFav()") Delete All Favorites

	.container__no__results(*ngIf="listCharacters.length  === 0")
		img(src="assets/no-results.png", alt="no results")